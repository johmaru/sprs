EnumDef: Enum = 
    <is_pub:PublicKw> Enum <name:Ident> LBrace <variants:EnumVariantList> RBrace => {
        Enum {
            ident: name,
            variants,
            is_public: is_pub,
        }
    };

    IdentList: Vec<String> = {
    => vec![],
    <first:Ident> <rest:(Comma <Ident>)*> => {
        let mut v = vec![first];
        v.extend(rest);
        v
    }
};

