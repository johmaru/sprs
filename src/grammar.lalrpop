ItemNode: Item = {
    FunctionDef,
    <v:VarDecl> => Item::VarItem(v),
    <p:PreprocessorDirective> => Item::Preprocessor(p),
    <i:ImportDirective> => Item::Import(i),
    <p:PackageDirective> => Item::Package(p),
    <e:EnumDef> => Item::EnumItem(e),
    <s:StructDef> => Item::StructItem(s),
